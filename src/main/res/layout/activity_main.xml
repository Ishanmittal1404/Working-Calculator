<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/orange"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="RAD"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="323dp"
        android:padding="10dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textAlignment="viewEnd"
        android:textSize="20dp"
        android:text="â‹®"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:gravity="end" />

</LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="bottom"
        android:textSize="30dp"
        android:text="Enter"
        android:textColor="@color/white"
        android:id="@+id/textView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:textAlignment="center"
                android:gravity="center"
                android:text="A/C"
                android:id="@+id/C"
                android:textColor="@color/red"
                android:textSize="30dp"
                android:onClick="clearBtn"
                android:backgroundTint="@color/red" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:text="("
                android:id="@+id/braceLeft"
                android:textColor="@color/white"
                android:onClick="leftBracket"
                android:textSize="30dp"
                android:backgroundTint="@color/grey" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:onClick="rightBracket"
                android:text=")"
                android:id="@+id/braceRight"
                android:backgroundTint="@color/grey"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:onClick="divide"
                android:text="/"
                android:id="@+id/divide"
                android:backgroundTint="@color/grey"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:textColor="@color/white"
                android:backgroundTint="@color/grey"
                android:layout_marginRight="10dp"
                android:onClick="btn_seven"
                android:text="7"
                android:id="@+id/btn_7"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="8"
                android:onClick="btn_eight"
                android:id="@+id/btn_8"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="9"
                android:onClick="btn_nine"
                android:id="@+id/btn_9"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="*"
                android:onClick="multiply"
                android:id="@+id/multiply"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:onClick="btn_four"
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:id="@+id/btn_5"
                android:layout_marginRight="10dp"
                android:onClick="btn_five"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:id="@+id/btn_6"
                android:layout_marginRight="10dp"
                android:onClick="btn_six"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:onClick="minus"
                android:text="-"
                android:id="@+id/minus"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:onClick="btn_one"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="2"
                android:onClick="btn_two"
                android:id="@+id/btn_2"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="3"
                android:onClick="btn_three"
                android:id="@+id/btn_3"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="+"
                android:onClick="btn_add"
                android:id="@+id/add"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="185dp"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="0"
                android:id="@+id/btn_0"
                android:onClick="btn_zero"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:text="."
                android:onClick="btn_dot"
                android:id="@+id/btn_."
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                app:backgroundTint="@color/orange"
                android:text="="
                android:onClick="equals"
                android:textColor="@color/white"
                android:textSize="30dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>